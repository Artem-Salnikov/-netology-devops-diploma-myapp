#!groovy

pipeline {
	agent any
  environment {
    DOCKERHUB_CREDENTIALS = credentials('dockerhub')
  }
  stages {
    stage('Get last tag') {
    	agent any
      steps {
      	sh "last_tag=${(git tag --list --sort=-version:refname \"0*\" | head -n 1)}"
      }
    }
    stage('Dockerhub login') {
      steps {
        sh "echo $last_tag"
  }
    }
  }
 }

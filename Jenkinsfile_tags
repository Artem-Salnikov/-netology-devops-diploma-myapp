#!groovy

pipeline {
	agent any
  environment {
    DOCKERHUB_CREDENTIALS = credentials('dockerhub')
  }
  stages {
    stage('Get last tag') {
      steps {
        script {
          last_tag = sh(returnStdout: true, script: 'git tag --list --sort=-version:refname \"0*\" | head -n 1').trim()
          }
          echo "last_tag=$last_tag"
      	//sh "last_tag=\$(git tag --list --sort=-version:refname \"0*\" | head -n 1)"
    }
    }
    stage('Docker Build') {
      steps {
         dir ('.') {
      	sh "docker build -t artemsalnikov/myapp-nginx:$last_tag ."
      }
    }
    }
   stage('Dockerhub login') {
      steps {
        sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
      }
    }
    stage('Docker push') {
      steps {
        sh "docker push artemsalnikov/myapp-nginx:$last_tag"
      }
    }
  }
}
